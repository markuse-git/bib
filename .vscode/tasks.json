{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wshadow",
                "-Wformat=2",
                "-Wcast-align",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wnull-dereference",
                "--std=c++17",
                "-g3",
                "-O0",
                "-o",
                "${workspaceFolder}/build/Debug/outDebug",
                "${workspaceFolder}/build/Debug/book.o",
                "${workspaceFolder}/build/Debug/database.o",
                "${workspaceFolder}/build/Debug/library.o",
                "${workspaceFolder}/build/Debug/main.o",
                "${workspaceFolder}/build/Debug/user.o",
                "-I/usr/local/include",  // SQLite Include-Pfad hinzufügen
                "-L/usr/local/lib",      // SQLite Library-Pfad hinzufügen
                "-lsqlite3"              // SQLite Bibliothek verlinken
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build using clang++"
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wshadow",
                "-Wformat=2",
                "-Wcast-align",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wnull-dereference",
                "--std=c++17",
                "-g3",
                "-O0",
                "-c",
                "${file}",
                "-o",
                "${workspaceFolder}/build/Debug/${fileBasenameNoExtension}.o",
                "-I/usr/local/include"   // SQLite Include-Pfad hinzufügen
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile using clang++"
        }
    ]
}
